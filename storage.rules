rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Public read for images and videos (để user có thể xem)
    match /posters/{imageId} {
      allow read: if true;
      allow write: if request.auth != null && 
                      request.resource.size < 5 * 1024 * 1024 && // Max 5MB
                      request.resource.contentType.matches('image/.*');
    }
    
    match /backdrops/{imageId} {
      allow read: if true;
      allow write: if request.auth != null && 
                      request.resource.size < 5 * 1024 * 1024 && // Max 5MB
                      request.resource.contentType.matches('image/.*');
    }
    
    match /videos/{videoId} {
      allow read: if true; // Allow public read for videos
      allow write: if request.auth != null && 
                      request.resource.size < 500 * 1024 * 1024 && // Max 500MB
                      request.resource.contentType.matches('video/.*');
    }
    
    match /subtitles/{movieId}/{filename} {
      allow read: if true; // Allow public read for subtitles
      allow write: if request.auth != null;
    }
  }
}
